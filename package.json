{
  "name": "dockerfile-language-server-nodejs",
  "description": "A language server for Dockerfiles powered by NodeJS, TypeScript, and VSCode technologies.",
  "keywords": [
    "language",
    "server",
    "docker",
    "dockerfile",
    "moby"
  ],
  "version": "0.8.0",
